services:
  pgdatabase:
    image: postgres:13
    environment:
      - POSTGRES_USER= airflow
      - POSTGRES_PASSWORD= airflow
      - POSTGRES_DB= airflow 
    volumes:
      - postgres-db-volume:/var/lib/postgresql/data
    ports:
      - "5432:5432"
  healthcheck:
    test: ["CMD", "pg_isready", "-U", "airflow"]
    interval: 5s
    retries: 5
  restart: always

docker run -it \
  -e POSTGRES_USER = "root" \
  -e POSTGRES_PASSWORD ="root" \
  -e POSTGRES_DB ="ny_taxi"
  -v /workspaces/DataCamp2024/ny_taxi_postgres_data
  -p 5432:5432 \
  postgres:13